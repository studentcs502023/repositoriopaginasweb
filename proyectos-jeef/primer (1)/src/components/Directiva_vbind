<template>
    <div class="clase" id="" style="">
        <h1>Directiva v-bind</h1>
        <input type="text" v-model="pass">
        <h2 v-text="pass" v-bind:style="pass.length<6?'color:blue; background-color:red':pass.length<10?'color:red; background-color:green':'color:brown; background-color:wheat'"></h2>
        <div>
            <img :src="image" alt="">
        </div>
        <div :class="!pass?'rechazado':'exitoso'">
            {{ !pass?"Por favor escriba la clave":"clave aceptada" }}
        </div>
    </div>
</template>

<script setup>
import { ref } from 'vue';

let clase = ref("div")
let pass = ref("")
let image = ref("https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSocErq1QEBqh8nni6H9Kfxa9teMfXSpg0jzQ&s")
let msj = ref("")
</script>



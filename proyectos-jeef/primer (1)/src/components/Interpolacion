<template>
  <div>
    <h1 class="titulo">mi primer proyecto en vue</h1>
    <p>{{ par.length>10?"Texto muy largo":"Texto corto" }}</p>
    <p>{{ data.nombre.charAt(0).toUpperCase()+data.nombre.slice(1,data.nombre.length) }}</p>
    <p>{{ data.edad }}</p>
    <p>{{ tit }}</p>
  </div>
</template>

<script setup>
import { ref } from 'vue';

let par = ref("Lorem")
let tit = "Luis"
console.log(par.value);
par.value = "Francisco"
console.log(tit);

let data = ref({
  nombre:"pedro",
  edad:12
})

data.value.edad = 18
tit = "Maria"


</script>

<style>
.titulo{
  background: red;
  color: white;
  border: 2px solid black;
}
</style>